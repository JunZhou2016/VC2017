    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mycontent"
        android:background="@drawable/mainbgreview"
        android:touchscreenBlocksFocus="true"
        >


        <!--添加可滑动的内容-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--添加声明语句-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:alpha="0.4"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Your health is just my happiness"
                    android:textColor="#f7f4f4"
                    android:textSize="32dp"
                    android:textStyle="bold" />
                <!--此处放置主界面部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/readytotest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/gorevewf"
                        android:clickable="true"
                        />

                    <TextView
                        android:id="@+id/showRankTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/readytotest"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ranktablebg"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="查看排名"
                        android:textColor="#fcfbfb"
                        android:textStyle="bold" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:background="#95c0e2" />
                <!--此处放置数据分析部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:orientation="vertical">
                    <!--顶部当前测试结果部分-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">
                        <!--左侧表情展示部分-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heighest" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:text="Good!"
                                android:textColor="#efdf63"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!--右侧数据显示部分-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:text="Last Data"
                                android:textColor="#efdf63"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="25dp"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:text="3600dp"
                                android:textColor="#64c1b8"
                                android:textSize="24dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--下页统计图表放置部分-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        android:background="#95c0e2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--图表-->
                        <!--滚动视图中使用居中属性将会造成大面积的侧栏留白产生-->
                        <HorizontalScrollView
                            android:id="@+id/scrolltools"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:clickable="true"
                            android:scrollbars="none">

                            <RelativeLayout
                                android:id="@+id/linear"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:gravity="center"></RelativeLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="健康走势图"
                            android:textColor="#f9f7f7"
                            android:textSize="24dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
