                android:layout_gravity="center_horizontal"
                android:id="@+id/noisestander"
                android:onClick="showDetail"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stander"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="噪音参数"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textColor="#f2eeee"
                    />
            </LinearLayout>
            <!--设置分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />
            <!--常用选项-->
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layout_bg"
                android:id="@+id/comitem"
                 >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comm"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通用选项"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="#f2eeee"
                    />
            </LinearLayout>
            <!--设置分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="2dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />
            <!--历史记录-->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/historyrecord"
                android:onClick="showDetail"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/history"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史记录"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textColor="#f2eeee"
                    />
            </LinearLayout>
            <!--设置分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />
            <!--开发者-->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/devdescribe"
                android:onClick="showDetail"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/developer"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开发者"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textColor="#f2eeee"
                    />
            </LinearLayout>
            <!--设置分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />
            <!--使用帮助-->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/userhelper"
                android:onClick="showDetail"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/helper"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用帮助"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:textColor="#f2eeee"
                    />
            </LinearLayout>
            <!--设置分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />

        <!--健康趋势-->
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/hintent"
            android:onClick="showDetail"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hintent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康趋势"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#f2eeee"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:background="#eae5e5"
            android:layout_gravity="center"
            />
        <!--健康知道-->
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/hkonw"
            android:onClick="showDetail"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/relat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康知道"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#f2eeee"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:background="#eae5e5"
            android:layout_gravity="center"
            />
        <!--退出-->
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/exitapp"
            android:onClick="showDetail"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#f2eeee"
                />
        </LinearLayout>
            <!--&lt;!&ndash;设置分割线&ndash;&gt;
            <View
                android:layout_marginTop="5dp"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#eae5e5"
                android:layout_gravity="center"
                />-->

    </LinearLayout>

