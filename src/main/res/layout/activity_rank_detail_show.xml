<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_rank_detail_show"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/rankshow"
android:orientation="vertical"
tools:context="zj.qidian.com.doctor.RankDetailShow"
    >
<ImageView
    android:padding="0dp"
    android:layout_marginTop="-107dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/priseheader"
    />


    <!--数据主体显示部分-->
    <LinearLayout
        android:layout_marginTop="-150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="@drawable/bg_rank"
        android:layout_gravity="center"
        >
      <!--  排名表头部分的声明;-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:gravity="center"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C69312"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="分数"
                android:gravity="center"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C69312"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="名次"
                android:gravity="center"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C69312"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="电话"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E6C1F"
            />
       <!--排名数据显示部分的布局样式;-->
        <ListView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/rank"
            android:gravity="center"
            android:textColor="@color/colorRed"
            />
    </LinearLayout>
    <!--数据显示部分结束-->

</LinearLayout>
