<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_your_healthy_intent"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
android:background="@drawable/intent_bgs"
tools:context="zj.qidian.com.doctor.YourHealthyIntent"
    >
<!--滚动视图中使用居中属性将会造成大面积的侧栏留白产生-->
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:scrollbars="none"
    android:id="@+id/scrolltools"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center">
    </RelativeLayout>
</HorizontalScrollView>
<TextView
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="健康走势图"
    android:gravity="center"
    android:textColor="#514c4c"
    android:textSize="24dp"
    android:fontFamily="sans-serif"
    android:layout_gravity="center_horizontal"
    />
</LinearLayout>
