<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rank"
    android:gravity="center"
    >
    <!--详细信息头部展示部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailicon"
            android:textStyle="bold"
            android:textColor="#d14715"
            android:background="@drawable/detailphone"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailtitle"
            android:textStyle="bold"
            android:textColor="#d14715"
            android:text="详细信息"
            android:textSize="16dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1c214"
        />
    <!--排名表头部分的声明-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:gravity="center"
            android:textColor="#4061f2"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="分数"
            android:gravity="center"
            android:textColor="#4061f2"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名次"
            android:gravity="center"
            android:textColor="#4061f2"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="电话"
            android:gravity="center"
            android:textColor="#4061f2"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1c214"
        />

    <!--排名详细数据显示部分的布局样式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailusername"
            android:textStyle="bold"
            android:textColor="#d14715"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailscore"
            android:textStyle="bold"
            android:textColor="#d14715"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailId"
            android:textStyle="bold"
            android:textColor="#d14715"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1c214"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detailphone"
            android:textStyle="bold"
            android:textColor="#d14715"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1c214"
        />
    <!--操作部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
      <QuickContactBadge
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/contact"
          android:id="@+id/quickcontact"
          android:layout_marginRight="25dp"
          />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:id="@+id/cancledetatil"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/detailcancel"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>