<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zj.qidian.com.doctor.FindPassword"
    android:background="@drawable/findpw"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Your Word"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#f1e9e9"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#BA9C64"
        android:alpha="0.3"
        android:layout_gravity="center_horizontal"
        >

        <!--输入用户名或者电话-->
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="60dp"
       android:orientation="vertical"
       >

       <RelativeLayout
           android:layout_width="280dp"
           android:layout_height="190dp"
           android:layout_gravity="center_horizontal"

           >

           <EditText
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="44dp"
               android:id="@+id/findby"
               android:hint="Type Your UN Or PW"
               android:textSize="14dp"
               android:textColor="#121111"
               android:padding="5dp"
               android:background="@drawable/findpassword"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/userinfor"
               android:padding="5dp"
               android:layout_marginLeft="5dp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="50dp"
               android:layout_marginLeft="20dp"
               >
              <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <CheckBox
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Phone"
                      android:id="@+id/findbytel"
                      android:layout_marginRight="5dp"
                      android:checked="true"
                      />
                  <CheckBox
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="UserName"
                      android:id="@+id/findbyusername"
                      android:layout_marginLeft="1dp"
                      />
              </RadioGroup>
           </LinearLayout>
           <Button
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Find"
               android:fontFamily="sans-serif-smallcaps"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               android:layout_marginTop="100dp"
               android:id="@+id/gotofind"
               android:background="@drawable/findselector"
               android:textStyle="bold"
               />
       </RelativeLayout>

   </LinearLayout>


</LinearLayout>


</LinearLayout>
